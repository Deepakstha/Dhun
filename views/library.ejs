<body>
    <!------------BODY HTML STARTS FROM HERE------------------------>
    <!------------LEFT AND RIGHT TOP SECTION STARTS FROM-------------->
    <section class="double-section">
        <div class="double-container">
            <%- include('partials/left-container'); %>
            <div class="right-container">
                <div class="right-content">
                    <div class="wrap">

                        <form action="/search" class="searchform" method="post">
                            <div class="search-inside-flex">
                                <a href="#"><img src="assets/images/search.svg" alt=""></a>
                                <input type="text" name="query" placeholder="Search artists, songs, albums...">
                            </div>                                                                                                                                                                                                                                                                                                                                                                                                              
                            <a href="#"><img src="/assets/images/mic.svg" alt=""></a>
                            <button type="submit"  id="btnSearch" >SEARCH</button>
                        </form>
                    </div>

                    <% if (token) { %>
                        <div class="profile-icon" style=" display: inline-block; width:  50px; height:  50px; border-radius:  50%; border:1px solid white; overflow: hidden;"> <!-- Style this as you wish -->
                            <!-- Display profile icon or any other profile-related content -->
                            <img src="/uploads/avatar/avatar.png" alt="Profile Icon" style=" width:  100%;
                            height: auto;">
                        </div>
                    <% } else { %>
                        <div class="signup-button-flex">
                            <a href="/listener-signup" class="no-bg-button">Sign Up</a>
                            <a href="/login" class="box-button">Log In</a>
                        </div>
                    <% } %>
                    
                </div>
                <div class="slider-imgae-top-bg">
                    <div class="slider-banner-content">
                        <div class="text-content mb-30">
                            <h4 class="mb-30">FEATURED SONGS</h4>
                            <h3>Post Malone</h3>
                            <h2>Circles</h2>
                        </div>
                        <div class="like-play-love-sec">
                            <img src="assets/images/three-dot.svg" alt="">
                            <img src="assets/images/love-icon.svg" alt="">
                            <a href="#" class="play-button">
                                Play
                            </a>
                        </div>
                    </div>
                </div>
                <div class="genre-whole-box">
                    <div class="genre-content-box mb-30">
                        <h2>Playlist</h2>
                        <div class="genre-music-box">
                            <% playlist.forEach(function(item) { %>

                                <a href="/display-playlist/<%=item.id%>">
                                    <div class="genre-single-box">
                                        <h3><%= item.name %></h3>
                                    </div>
                                </a>
                              <% }); %>
                            
                           
                            <div class="click-for-more">
                                <a href="/playlist" style="padding: 30px;"><img src="assets/images/right-big-arrow.svg" alt=""></a>
                                <h3 style="margin-bottom: 15px;">Click for More</h3>
                            </div>
                        </div>
                    </div>
                    <div class="genre-content-box mb-30">
                        <h2>Likes</h2>
                        <div class="genre-music-box">
                            <% likeList.forEach(function(item) { %>

                                <a href="/one-song/<%= item.song.id %>">
                                    <div class="genre-single-box">
                                        <img src="/<%= item.song.poster %>" alt="" style="width: 100%; height: 200px; object-fit: cover;">
                                        <h3><%= item.song.title %></h3>
                                        <p>Likes: <%= item.song.likes %> </p>
                                    </div>
                                </a>
                              <% }); %>
                            
                           
                            <div class="click-for-more">
                                <a href="/liked-list"><img src="assets/images/right-big-arrow.svg" alt=""></a>
                                <h3>Click for More</h3>
                            </div>
                        </div>
                    </div>
                   
                </div>
            </div>
        </div>
    </section>
