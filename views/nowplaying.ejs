<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dhun | Home</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/assets/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
</head>

<body>
    <!------------BODY HTML STARTS FROM HERE------------------------>



    <!------------LEFT AND RIGHT TOP SECTION STARTS FROM-------------->
    <section class="double-section">
        <div class="double-container" style="height: 100vh;">
            <%- include('partials/left-container'); %>
            <div class="right-container">
                <%- include('partials/side-header'); %>
                <div class="right-content">
                    <div class="banner-content">
                        <h2>Now Playing</h2>
                        
                        <img src="/<%= song.poster %>" alt="">
                        <div class="master_play" style="width: 1000px; height: 80px; justify-content: space-between; margin-top: 15px;">
                            
                            <img src="/<%= song.poster %>" alt="Alan" id="poster_master_play">
                            <h5 id="title"><%= song.title %><br>
                                <div class="subtitle"><%= song.user.fullName %></div>
                            </h5>
                           
                            <span id="currentStart" style="display: flex; align-items: center; width: auto;"> <%= song.createdAt %></span>

                           
                            <audio autoPlay loop controls>
                                <source src="/<%= song.audioPath %>"></source>
                              </audio>  
                            <img style="cursor: pointer;" id="likeButton" data-song-id="<%= song.id %>" src="/assets/images/love-icon.svg" alt="" srcset="" style="width: 20px; height: auto; margin-left: 15px">
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    
    <!--------------LEFT AND RIGHT TOP SECTION ENDS FROM HERE--------------------->





    <!---------------BODY HTML ENDS FROM HERE-------------------------->
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script src="assets/js/script.js"></script>
    <script>
        document.getElementById('likeButton').addEventListener('click', function() {
  var songId = this.getAttribute('data-song-id');
  function sendLikeToBackend(songId) {
  // Replace with your backend URL
  var url = `http://localhost:8000/like/${songId}`;

  // Prepare the data to send
  var data = { songId: songId };

  // Use fetch API to send the data
  fetch(url, {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json'
    },
    body: JSON.stringify(data)
  })
  .then(response => response.json())
  .then(data => console.log(data))
  .catch((error) => {
    console.error('Error:', error);
  });
}
  sendLikeToBackend(songId);
});
    </script>
</body>

</html>